{
  "name": "cantina-pos",
  "version": "1.0.0",
  "private": true,
  "description": "Sistema POS para Cantinas",
  "workspaces": [
    "packages/shared",
    "packages/backend",
    "packages/frontend-web",
    "packages/frontend-mobile",
    "packages/infra"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces --if-present",
    "test:coverage": "npm test -- --coverage",
    "lint": "eslint packages/*/src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit -p packages/shared/tsconfig.json",
    "clean": "rm -rf node_modules packages/*/node_modules packages/*/dist",
    "deploy": "./scripts/deploy.sh",
    "deploy:backend": "./scripts/deploy.sh backend",
    "deploy:frontend": "./scripts/deploy.sh frontend",
    "deploy:all": "./scripts/deploy.sh all"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "overrides": {
    "typescript": "^5.3.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "fast-check": "^3.15.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.0"
  },
  "dependencies": {}
}
